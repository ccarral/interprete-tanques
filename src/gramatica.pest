WHITESPACE = _{" " | "\n"}

expr = { int  | expr_par}
    int = @{ ("-")* ~ ASCII_DIGIT+ }
    expr_par = {"(" ~ expr ~")"}

decl = { "var" ~ nom_var ~  "=" ~ expr ~ ";" }
    nom_var = @{ ASCII_ALPHA_LOWER+ }

inst = { decl }

bloque = _{ (inst)* ~ inst?}

prog = _{
    SOI ~
    bloque ~
    EOI
}


